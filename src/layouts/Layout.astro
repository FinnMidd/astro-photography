---
import "../styles/style.css";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

interface Props {
	title?: string;
	description?: string;
	mainClass?: string;
}

const {
	title = "Minimalist Photography | Portfolio",
	description = "A modern, sleek photography portfolio showcasing minimalistic and clean visual stories.",
	mainClass = "",
} = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<Header title={title} description={description} />
	</head>
	<body class="selection:bg-primary selection:text-bg">
		<Navbar />
		<main class={mainClass}>
			<slot />
		</main>

		<Footer />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
